---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
        <nav>
                <a href="/"><img src="/4ozStudioTransparent.png" class="logo"/></a>
                <div class="internal-links">
                        <HeaderLink href="/tune-in">Tune-In</HeaderLink>
                        <HeaderLink href="/games">Games</HeaderLink>
                        <HeaderLink href="/links">Links</HeaderLink>
                        <HeaderLink href="https://4ozStudio.myshopify.com/">Store</HeaderLink>
                </div>
        </nav>
</header>
<style>
        header {
                margin: 0;
                padding: 0 1em;
                background: white;
        }

        nav {
                display: flex;
                justify-content: space-between;
                align-items: center;

        }
        nav a {
                text-decoration: none;
        }

        .internal-links {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                display: flex;
                gap: 4px;
        }

                .internal-links a:hover {
                background-image: linear-gradient(
                        45deg, 
                        rgba(0,0,0,0.2) 25%, 
                        transparent 25%, 
                        transparent 50%, 
                        rgba(0,0,0,0.2) 50%, 
                        rgba(0,0,0,0.2) 75%, 
                        transparent 75%, 
                        transparent
                        );
                background-size: 5px 5px;

        }

        .logo {
                height: 60px;
        }
        @media (max-width: 550px) {
                nav {
                        margin: 1em 0 0 0 ;
                        display: flex;
                        flex-direction: column;
                        align-items: center;
                        justify-content: center;
                }
                .internal-links a {
                        width: 25vw;
                        min-width: 90px;
                }
                .internal-links {
                        width: 100%;
                        position: relative;
                        display: flex;
                        justify-content: center;
                }
        }

</style>
